<div class="author">
    <h1 class="author_heading">Welcome to the World of NodeJS</h1>
    <p class="author_body">React and Vue - Unity and Phaser - Udemy and Youtube - MongoDB and Firebase</p>
</div>

<img src="/img/developer.jpg" class="developer-image" width="750" height="500">

<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach( post=> {%>
            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="article-list_date">
                        <%= post.createdAt.toLocaleString('tr-TR', {year: 'numeric' , month: 'long' , day: 'numeric' })
                            %>
                    </span>
                </a>
            </li>
            <% }) %>
    </ul>

    <% if(nextPage !== null){ %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; Older Posts</a>
    <% } %>

</section>